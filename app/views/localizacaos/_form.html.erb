
  
<%= simple_form_for(@localizacao, :html => { :class => 'form-horizontal' }) do |f| %>
	<% if @localizacao.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@localizacao.errors.count, "error") %> erro ao inserir localização:</h2>

	      <ul>
	      <% @localizacao.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
	
	<%= f.input :descricao, :wrapper => :prepend, :label => false do %>
	    <%= content_tag :span, "Descrição", :class => "add-on" %>
	    <%= f.input_field :descricao %>
	  <% end %>
	<div class="controls">
		<h4>Produtos</h4>
		<div class="multiselect">
			<% @produtos.each do |produto| %>
			
	    	<label class="checkbox"> <input type="checkbox" <%=produto.checked%> name="produtos_attributes[]" id="<%=produto.idProduto%>" value="<%= produto.idProduto %>" ><%=produto.nomeProduto%></input></label>
			<hr/>
		<% end %>
		</div>
	</div>
	<div class="form-actions">	
    	<%= f.button  :submit, 'Salvar', :class => 'btn-primary' %>
	</div>
<% end %>
