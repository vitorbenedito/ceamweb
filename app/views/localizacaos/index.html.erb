<legend>Localizações</legend>
<p>
<div style='text-align:right; width:100%;'>
	<%= link_to 'Nova Localização', new_localizacao_path, :class => 'btn btn-primary' %>
</div>
</p>

<table class="table table-bordered table-striped table-condensed" >
<thead>
<tr>
  <th style="font-size: 1.5em">Descrição</th>
  <th></th>
  <th></th>
  <th></th>
<tr>
</thead>

<tbody>
  <tr>
<% @localizacaos.each do |localizacao| %>
  <td width="100%"><%= localizacao.descricao %></td>
  <td>  <%= link_to raw('<i class="icon-search icon-white"></i>'), localizacao ,:class => 'btn btn-primary', :title => 'Detalhe'%></td>
  <td>  <%= link_to raw('<i class="icon-edit icon-white"></i>'), edit_localizacao_path(localizacao),:class => 'btn btn-primary', :title => 'Alterar' %></td>
  <td>  <%= link_to raw('<i class="icon-trash icon-white"></i>'), localizacao, method: :delete, data: { confirm: 'Are you sure?' },:class => 'btn btn-primary', :title => 'Excluir' %></td>
  </tr>
<% end %>
  <tr>
    <td colspan='4'> <%= will_paginate @localizacaos , :align => "center"%>	</td>
  </tr>
</tbody>
</table>
